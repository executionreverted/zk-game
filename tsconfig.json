{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "cache",
  ],
  "include": [
    "./utils",
    "./test",
    "./contracts",
    "./scripts",
    "./hardhat.config.ts",
    "./typechain-types",
    "./deploy"
  ]
}